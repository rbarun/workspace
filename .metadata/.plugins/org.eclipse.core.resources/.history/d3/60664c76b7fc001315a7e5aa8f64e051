import java.lang.Math;

public class ForLoop {

	public static void main(String[] args) {
			
		for(int i = 1; i < 10; i++) {
		int twoi = 2*i;
		int pow = (int) Math.pow(twoi, i);
	System.out.println("i = " + i);
	System.out.println("2 x i = " + i);
	System.out.println("(2 x i)^i = " + i);
	System.out.println();
	}
  }
}
