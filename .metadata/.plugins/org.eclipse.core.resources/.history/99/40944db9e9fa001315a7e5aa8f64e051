 * Rock Paper Scissors Program
 */

import java.lang.Math;

public class RockPaperScissors {

	public static void main(String[] args) {
	
		System.out.println("RockPaperScissors Game");
		System.out.print("Rock, Paper, Scissors, Shoot!");
		System.out.println("What is your decision?");
		int random = (int) ((3)*Math.random() + 1);
		//System.out.println(random);
		
		String decision;
		switch(random){
		case 1: decision = "Rock"; break;
		case 2: decision = "Paper"; break;
		case 3: decision = "Scissors"; break;
		}
		
		
		}
	}


