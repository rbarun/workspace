import java.util.Scanner;

public class AverageValue {

	public static void main(String[] args) {
		
		final int done = 0;
		int numValue = 0;
		int sumOfValues = 0;
		Scanner input = new Scanner(System.in);
		int newValue;
		while (newValue != done){
			System.out.println("Enter Value to Be Averaged [Enter \"done\" if done]: ");
			numValue ++;
//System.out.println("*********newValue: " + newValue);
			sumOfValues += newValue;
//System.out.println("*********sumOfValues: " + sumOfValues);
//System.out.println("*********numValue: " + numValue);
			newValue = input.nextInt(); 
		}
		double avg = (double)sumOfValues/(double)numValue;
		System.out.println("Average of Given Values: " + avg);
	}
}
